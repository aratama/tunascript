{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Compiler",
      "type": "shell",
      "command": "go build -o output/negitoro ./cmd/negitoro/",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Build Server",
      "type": "shell",
      "command": "go run ./cmd/negitoro/ build example/server/server.ngtr -o example/server/server.wasm",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Server",
      "type": "shell",
      "command": "go run ./cmd/negitoro/ run example/server/server.ngtr example/server/todo.sqlite3",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Launch Server",
      "type": "shell",
      "command": "go run ./cmd/negitoro/ launch example/server/server.wasm example/server/todo.sqlite3",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "isBackground": true,
      "dependsOn": "Build Server"
    },
    {
      "label": "Install VSIX Extension",
      "type": "shell",
      "command": "cd editors/negitoro.negitoro-0.1.0 && rm -f negitoro.vsix && npx @vscode/vsce package --allow-missing-repository -o negitoro.vsix && code --install-extension negitoro.vsix --force",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
