{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Compiler",
      "type": "shell",
      "command": "go build -o output/tuna ./cmd/tuna/",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Build HTTP Server Example",
      "type": "shell",
      "command": "go run ./cmd/tuna/ build example/server/server.tuna -o example/server/server.wasm",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Go Tests",
      "type": "shell",
      "command": "go test ./...",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Run HTTP Server Example",
      "type": "shell",
      "command": "go run ./cmd/tuna/ run example/server/server.tuna example/server/todo.sqlite3",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Run HTTP Server Example WASM Build",
      "type": "shell",
      "command": "go run ./cmd/tuna/ launch example/server/server.wasm example/server/todo.sqlite3",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "isBackground": true,
      "dependsOn": "Build Server"
    },
    {
      "label": "Install VSCode Tuna Extension",
      "type": "shell",
      "command": "cd editors/tuna.tuna-0.1.0 && rm -f tuna.vsix && npx @vscode/vsce package --allow-missing-repository -o tuna.vsix && code --install-extension tuna.vsix --force",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Playground Example",
      "type": "shell",
      "command": "go run ./cmd/tuna/ run example/playground/playground.tuna",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "isBackground": true
    }
  ]
}
