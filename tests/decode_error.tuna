// expect: error
// expect: $.age: missing field

import { log } from "prelude"
import { toJSON, decode } from "json"

type Person = { name: string, age: number }

export function main(): void {
  const parsed = toJSON("{\"name\":\"Alice\"}")
  switch (parsed) {
    case err as error: {
      log("error")
      log(err.message)
    }
    case j as json: {
      const decoded = decode<Person>(j)
      switch (decoded) {
        case decoded as error: {
          log("error")
          log(decoded.message)
        }
        case decoded as Person: {
          log("ok")
        }
      }
    }
  }
}
