// expect: [2,4,6,8]
// expect: [2,4]
// expect: 10

import { log } from "prelude"
import { stringify } from "json"
import { map, filter, reduce } from "array"

const nums: i64[] = [1, 2, 3, 4]
const doubled: i64[] = map(nums, function (n: i64): i64 {
  return n * 2
})
const even: i64[] = filter(nums, function (n: i64): boolean {
  return n % 2 == 0
})
const sum: i64 = reduce(nums, function (acc: i64, n: i64): i64 {
  return acc + n
}, 0)

export function main(): void {
  log(stringify(doubled))
  log(stringify(even))
  log(sum)
}
